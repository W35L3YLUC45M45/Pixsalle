
{% extends "base.twig" %}

{% block title %}Sign-up | PixSalle{% endblock %}

{% block head %}
  <link rel="stylesheet" href="assets/css/sign-up.css"/>
{% endblock %}

{% block header %}
{% endblock %}
{% block subheader %}
{% endblock %}

{% block content %}
  <video autoplay="" muted="" loop="" id="sign-up-bg-video">
    <source src="assets/media/video/old-house-japan-autumn-leaves.mp4" type="video/mp4">
  </video>
  <div class="form-body">
    <div class="title-body">
      <h1>Sign up here!</h1>
    </div>
    <form data-cy="sign-up" action="{{ formAction }}" method="POST">
      <div class="email-section">
        <label>Email</label>
        <input data-cy="sign-up__email" type="text" name="email" placeholder="Enter your email">
        {% if formErrors['email'] %}
          <p data-cy="sign-up__wrongEmail">{{ formErrors['email'] }}</p>
        {% endif %}
      </div>
      <div class="password-section">
        <label>Password</label>
        <input data-cy="sign-up__password" type="password" name="password" placeholder="Enter your password">
        {% if formErrors['password'] %}
          <p data-cy="sign-up__wrongPassword">{{ formErrors['password'] }}</p>
        {% endif %}
      </div>
      <div class="buttons-section">
        <input data-cy="sign-up__btn" type="submit" value="Sign-up">
        <p class="sign-up-option">Already have an account? <a href="sign-in">Login here!</a></p>
      </div>
  </form>
  </div>
{% endblock %}

{% block footer %}
{% endblock %}